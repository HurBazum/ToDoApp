<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:l="clr-namespace:ToDoApp.ViewModels">
    <DataTemplate x:Key="GoalViewer" DataType="ListBoxItem">
        <Grid Width="550" Height="100" Background="{Binding ActualState}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="495" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Id}" Grid.Column="0" Grid.Row="0" />
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1" Text="{Binding GoalTimer}" />
            <Button Content="{Binding IsCompleted}" Width="35" Grid.Row="0" Grid.Column="2"
                    Command="{Binding ChoseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:GoalViewModel}}" />
            <TextBlock Padding="10, 5, 5, 5" TextWrapping="Wrap" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Text="{Binding Text}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>